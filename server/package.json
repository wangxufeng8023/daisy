{
  "name": "daisy-server",
  "version": "3.0.0",
  "description": "基于 koa2 搭建后端服务器。",
  "author": "angela",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "dev": "./node_modules/.bin/nodemon dist/server.js",
    "prd": "pm2 start dist/server.js",
    "test": "jest",
    "assets": "ts-node copyStaticAssets.ts",
    "ci": "npm run test && tsc && npm run assets"
  },
  "dependencies": {
    "debug": "^2.6.3",
    "docxtemplater": "^3.2.4",
    "jszip": "^2.6.1",
    "koa": "^2.2.0",
    "koa-bodyparser": "^3.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.1.1",
    "koa-send": "^4.1.3",
    "koa-static": "^3.0.0",
    "moment": "^2.20.1",
    "mongodb": "^3.0.3"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/jest": "^22.1.1",
    "@types/jszip": "^3.1.3",
    "@types/koa": "^2.0.43",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa-static": "^4.0.0",
    "@types/mongodb": "^3.0.5",
    "@types/shelljs": "^0.7.7",
    "@types/supertest": "^2.0.4",
    "jest": "^22.1.4",
    "koa2-cors": "^2.0.5",
    "nodemon": "^1.8.1",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
